algoritmo "Data de aniversario"
var
   AnoAtual, AnoNasc, Idade : Inteiro
inicio
      Escreval ("Em que ano nós estamos? ")
      Leia (AnoAtual)
      Escreval ("Em que ano você nasceu? ")
      Leia (AnoNasc)
      Idade <- AnoAtual - AnoNasc
      Escreva ("A sua idade é: ", Idade)

fimalgoritmo